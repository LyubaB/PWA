<?xml version = "1.0" encoding = "UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >

<suite name = "testngChrome">
    <listeners>
        <listener class-name="listeners.Listeners"/>
    </listeners>
    <parameter name="browser" value="CHROME"/>
    <test name = "test1">
        <classes>
            <class name = "tests.EmailPopupMessageTests">
                <methods>
                    <exclude name="HomePage_EmailPopupAppears_C138"/>
                    <exclude name="HomePage_EmailPopupAppears_EmailPopupClosed1_C138"/>
                    <exclude name="HomePage_EmailPopupAppears_EmailPopupClosed2_C138"/>
                    <exclude name="HomePage_EmailPopupAppears_EmailPopupClosed3_C139"/>
                </methods>
            </class>
            <class name="tests.SearchBarTests">
                <methods>
                    <include name="HomePage_SearchBarForBiggerScreen_ProvidesSuggestion_C140"/>
                    <include name="HomePage_SearchBarForSmallerScreen_ProvidesSuggestion_C140"/>
                </methods>
            </class>
        </classes>
    </test>
</suite>